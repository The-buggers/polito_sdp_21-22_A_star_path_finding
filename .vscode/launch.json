{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Custom-Make-And-Launch",
            "preLaunchTask": "make",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/graphtest",
            "args": ["./Benchmark/binarygraph_f3.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}